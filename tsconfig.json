{
    "compilerOptions": {
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "module": "esnext",
        "declaration": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "moduleResolution": "node",
        "outDir": "./lib",
        "incremental": true,
        "jsx": "react",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "noEmit": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "dist",
        ".cache"
    ]
}